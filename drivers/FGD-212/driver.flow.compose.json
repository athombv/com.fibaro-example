  "actions": [
    {
      "id": "FGD-212_set_brightness",
      "title": {
        "en": "Set forced brightness",
        "nl": "Stel geforceerde helderheid in"
      },
      "hint": {
        "en": "Change the \"set forced brightness\" parameter of your dimmer. If this parameter is active, switching on the Dimmer 2 (S1 single click) will always set this brightness level, 0 will disable this function.",
        "nl": "Stel de \"geforceerde helderheid\" parameter van een dimmer in. Wanneer deze parameter actief is, zal bij het inschakelen van Dimmer 2 (S1 single click) altijd naar deze helderheid inschakelen, 0 schakelt deze functie uit."
      },
      "args": [
        {
          "name": "set_forced_brightness_level",
          "type": "range",
          "min": 0,
          "max": 1,
          "step": 0.01,
          "label": "%",
          "labelMultiplier": 100
        }
      ]
    },
    {
      "id": "FGD-212_dim_duration",
      "title": {
        "en": "Change brightness over time",
        "nl": "Verander helderheid over tijd"
      },
      "hint": {
        "en": "Change the brightness and specify the transition duration, 0 will change brightness instantly.",
        "nl": "Verander de helderheid en specificeer de gewenste transitie tijdsduur, 0 is onmiddellijke verandering van helderheid."
      },
      "args": [
        {
          "name": "brightness_level",
          "type": "range",
          "min": 0,
          "max": 1,
          "step": 0.01,
          "label": "%",
          "labelMultiplier": 100
        },
        {
          "name": "dimming_duration",
          "type": "number",
          "min": 0,
          "max": 127,
          "placeholder": {
            "en": "Duration",
            "nl": "Tijdsduur"
          }
        },
        {
          "name": "duration_unit",
          "type": "dropdown",
          "values": [
            {
              "id": "0",
              "label": {
                "en": "sec",
                "nl": "sec"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "min",
                "nl": "min"
              }
            }
          ]
        }
      ]
    },
