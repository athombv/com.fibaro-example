        "zwave": {
          "index": 4,
          "size": 1
        },
        "values": [
          {
            "id": "0",
            "label": {
              "en": "4 seconds"
            }
          },
          {
            "id": "1",
            "label": {
              "en": "8 seconds"
            }
          },
          {
            "id": "2",
            "label": {
              "en": "12 seconds"
            }
          },
          {
            "id": "3",
            "label": {
              "en": "16 seconds"
            }
          }
